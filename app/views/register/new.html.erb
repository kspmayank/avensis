<h1>Registration for Avensis 2k15</h1>
<%= form_for :register, url:"/register/create" do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :college %><br>
    <%= f.text_field :college %>
  </p>
  <p>
    <%= f.label :branch %><br>
    <%= f.text_field :branch %>
  </p>
  <p>
    <%= f.label :year %><br>
    <%= f.text_field :year %>
  </p>

  <p>
    <%= f.label :gender %><br>
    <%= f.text_field :gender %>
  </p>
  <p>
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :mobile %><br>
    <%= f.text_field :mobile %>
  </p>
  <p>
    <% Event.all.each do |e| %>
        <%= check_box_tag "event[id][]",e.id %>
        <%= e.name %> <br>
    <% end %>
  </p>

  <p>
    <%= f.submit "Submit" %>
  </p>
<% end %>
